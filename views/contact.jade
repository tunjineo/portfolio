extends layout

block content
    .container.color
      .row
        .col-md-7.col-md-offset-2
          form(method='post', action='contact/send')
            h1 Contact Us
            |   
            .form-group
              label Name
              |     
              input.form-control(type='text',name='name', placeholder='Name')
            |   
            .form-group
              label Email Address
              |     
              input.form-control(type='email',name='email', placeholder='Email')
            |   
            .form-group
              label Message
              |     
              input.form-control(type='text',name='Message', placeholder='Message')
            |   
            button.btn.btn-default(type='submit') Submit